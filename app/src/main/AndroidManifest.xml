<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AQUA_Self_Care">

        <!-- Splash Activity (Launcher) -->
        <activity
            android:name=".SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.AQUA_Self_Care.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Onboarding Activity -->
        <activity
            android:name=".OnboardingActivity"
            android:exported="false"
            android:theme="@style/Theme.AQUA_Self_Care.Onboarding" />

        <!-- Login Activity -->
        <activity
            android:name=".LoginActivity"
            android:exported="false"
            android:theme="@style/Theme.AQUA_Self_Care.Onboarding" />

        <!-- Sign Up Activity -->
        <activity
            android:name=".SignUpActivity"
            android:exported="false"
            android:theme="@style/Theme.AQUA_Self_Care.Onboarding" />

        <!-- Reset Password Activity -->
        <activity
            android:name=".ResetPasswordActivity"
            android:exported="false"
            android:theme="@style/Theme.AQUA_Self_Care.Onboarding" />

        <!-- OTP Activity -->
        <activity
            android:name=".OtpActivity"
            android:exported="false"
            android:theme="@style/Theme.AQUA_Self_Care.Onboarding" />

        <!-- Water Intake Activity -->
        <activity
            android:name=".WaterIntakeActivity"
            android:exported="false"
            android:theme="@style/Theme.AQUA_Self_Care.Onboarding" />

        <!-- Main Activity -->
        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:theme="@style/Theme.AQUA_Self_Care" />

    </application>

</manifest>