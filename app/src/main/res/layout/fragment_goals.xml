<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_dark"
    android:padding="16dp"
    android:paddingTop="60dp"
    tools:context=".fragments.GoalsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header with Title -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="32dp">

            <!-- Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Daily Goals"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/white" />
        </LinearLayout>

        <!-- Activity Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Activity"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginBottom="16dp" />

        <!-- Steps Goal -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/card_background"
            android:padding="16dp"
            android:layout_marginBottom="12dp"
            android:gravity="center_vertical">

            <!-- Steps Icon -->
            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_steps"
                android:background="@drawable/icon_background"
                android:padding="8dp"
                android:layout_marginEnd="16dp"
                android:scaleType="centerInside" />

            <!-- Steps Info -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10,000"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Steps"
                    android:textSize="14sp"
                    android:textColor="@color/mint_green" />
            </LinearLayout>

            <!-- Edit Button -->
            <Button
                android:id="@+id/btnEditSteps"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="Edit"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:background="@drawable/button_secondary"
                android:minWidth="0dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp" />
        </LinearLayout>

        <!-- Water Goal -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/card_background"
            android:padding="16dp"
            android:layout_marginBottom="12dp"
            android:gravity="center_vertical">

            <!-- Water Icon -->
            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_water"
                android:background="@drawable/icon_background"
                android:padding="8dp"
                android:layout_marginEnd="16dp"
                android:scaleType="centerInside" />

            <!-- Water Info -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8 cups"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Water"
                    android:textSize="14sp"
                    android:textColor="@color/mint_green" />
            </LinearLayout>

            <!-- Edit Button -->
            <Button
                android:id="@+id/btnEditWater"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="Edit"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:background="@drawable/button_secondary"
                android:minWidth="0dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp" />
        </LinearLayout>

        <!-- Calories Goal -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/card_background"
            android:padding="16dp"
            android:layout_marginBottom="24dp"
            android:gravity="center_vertical">

            <!-- Calories Icon -->
            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_calories"
                android:background="@drawable/icon_background"
                android:padding="8dp"
                android:layout_marginEnd="16dp"
                android:scaleType="centerInside" />

            <!-- Calories Info -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="500"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Calories Burned"
                    android:textSize="14sp"
                    android:textColor="@color/mint_green" />
            </LinearLayout>

            <!-- Edit Button -->
            <Button
                android:id="@+id/btnEditCalories"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="Edit"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:background="@drawable/button_secondary"
                android:minWidth="0dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp" />
        </LinearLayout>

        <!-- Wellness Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wellness"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginBottom="16dp" />

        <!-- Sleep Goal -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/card_background"
            android:padding="16dp"
            android:layout_marginBottom="12dp"
            android:gravity="center_vertical">

            <!-- Sleep Icon -->
            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_sleep"
                android:background="@drawable/icon_background"
                android:padding="8dp"
                android:layout_marginEnd="16dp"
                android:scaleType="centerInside" />

            <!-- Sleep Info -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8 hours"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sleep"
                    android:textSize="14sp"
                    android:textColor="@color/mint_green" />
            </LinearLayout>

            <!-- Edit Button -->
            <Button
                android:id="@+id/btnEditSleep"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="Edit"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:background="@drawable/button_secondary"
                android:minWidth="0dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp" />
        </LinearLayout>

        <!-- Heart Rate Goal -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/card_background"
            android:padding="16dp"
            android:layout_marginBottom="24dp"
            android:gravity="center_vertical">

            <!-- Heart Rate Icon -->
            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_heart"
                android:background="@drawable/icon_background"
                android:padding="8dp"
                android:layout_marginEnd="16dp"
                android:scaleType="centerInside" />

            <!-- Heart Rate Info -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="60 bpm"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Heart Rate"
                    android:textSize="14sp"
                    android:textColor="@color/mint_green" />
            </LinearLayout>

            <!-- Edit Button -->
            <Button
                android:id="@+id/btnEditHeartRate"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="Edit"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:background="@drawable/button_secondary"
                android:minWidth="0dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
