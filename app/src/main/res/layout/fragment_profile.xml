<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_dark"
    android:padding="16dp"
    android:paddingTop="60dp"
    tools:context=".fragments.ProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Profile Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="32dp" />

        <!-- Profile Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="32dp">

            <!-- Profile Picture -->
            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/ic_profile_pic"
                android:background="@drawable/profile_picture_background"
                android:padding="8dp"
                android:scaleType="centerInside"
                android:layout_marginBottom="16dp" />

            <!-- User Name -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Senzura Porya"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_marginBottom="8dp" />

            <!-- User Email -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="senpor@email.com"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:layout_marginBottom="24dp" />

            <!-- Edit Button -->
            <Button
                android:layout_width="120dp"
                android:layout_height="48dp"
                android:text="Edit"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                style="@style/CustomSecondaryButtonStyle"
                android:backgroundTint="@null"
                android:stateListAnimator="@null" />

        </LinearLayout>

        <!-- Activity Statistics Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="32dp">

            <!-- Days Active Card -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/card_background"
                android:padding="16dp"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginEnd="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Days Active"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:gravity="center" />

            </LinearLayout>

            <!-- Goals Completed Card -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/card_background"
                android:padding="16dp"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginEnd="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="34"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Goals Completed"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:gravity="center" />

            </LinearLayout>

            <!-- Workouts Logged Card -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/card_background"
                android:padding="16dp"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="56"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Workouts Logged"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:gravity="center" />

            </LinearLayout>

        </LinearLayout>

        <!-- Settings Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginBottom="16dp" />

        <!-- Notifications Setting -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/card_background"
            android:padding="16dp"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp"
            android:clickable="true"
            android:focusable="true"
            android:backgroundTint="@null">

            <!-- Bell Icon -->
            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_notifications"
                android:background="@drawable/icon_background"
                android:padding="6dp"
                android:scaleType="centerInside"
                android:layout_marginEnd="16dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Notifications"
                android:textSize="16sp"
                android:textColor="@color/white" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_forward"
                android:scaleType="centerInside" />

        </LinearLayout>

        <!-- Privacy Setting -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/card_background"
            android:padding="16dp"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp"
            android:clickable="true"
            android:focusable="true"
            android:backgroundTint="@null">

            <!-- Shield Icon -->
            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_privacy"
                android:background="@drawable/icon_background"
                android:padding="6dp"
                android:scaleType="centerInside"
                android:layout_marginEnd="16dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Privacy"
                android:textSize="16sp"
                android:textColor="@color/white" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_forward"
                android:scaleType="centerInside" />

        </LinearLayout>

        <!-- About Setting -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/card_background"
            android:padding="16dp"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp"
            android:clickable="true"
            android:focusable="true"
            android:backgroundTint="@null">

            <!-- Info Icon -->
            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_about"
                android:background="@drawable/icon_background"
                android:padding="6dp"
                android:scaleType="centerInside"
                android:layout_marginEnd="16dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="About"
                android:textSize="16sp"
                android:textColor="@color/white" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_forward"
                android:scaleType="centerInside" />

        </LinearLayout>

        <!-- Logout Button -->
        <Button
            android:id="@+id/btnLogout"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Logout"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            style="@style/CustomButtonStyle"
            android:backgroundTint="@null"
            android:stateListAnimator="@null"
            android:layout_marginTop="16dp" />

    </LinearLayout>
</ScrollView>

